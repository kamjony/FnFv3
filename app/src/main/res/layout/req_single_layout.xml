<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/req_single_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/female" />

    <TextView
        android:id="@+id/req_single_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/req_single_img"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/req_single_img"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/req_single_name_txt"
        android:layout_toRightOf="@id/req_single_img"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/req_accept_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Accept" />

        <Button
            android:id="@+id/req_decline_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/req_accept_btn"
            android:layout_alignBottom="@+id/req_accept_btn"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/req_single_name_txt"
            android:text="Decline" />
    </LinearLayout>




</RelativeLayout>